{
  "name": "@codedojo/server",
  "version": "1.0.0",
  "description": "CodeDojo Server - Real-time collaborative IDE backend",
  "type": "commonjs",
  "main": "src/server.js",
  "scripts": {
    "dev": "node src/server.js",
    "build": "echo 'No build required for server'",
    "lint": "eslint src/ tests/",
    "test": "mocha --require tests/setup.js tests/**/*.test.js --timeout 60000",
    "test:ot": "mocha tests/ot.integration.test.js --timeout 60000",
    "format": "prettier --write \"src/**/*.{js,json}\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\" \"tests/**/*.js\""
  },
  "keywords": [
    "collaborative",
    "ide",
    "codedojo",
    "websocket",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-ecs": "^3.927.0",
    "@aws-sdk/client-lambda": "^3.927.0",
    "@azure/arm-containerinstance": "^9.1.0",
    "@azure/identity": "^4.13.0",
    "@google-cloud/functions-framework": "^4.0.0",
    "@google-cloud/run": "^3.0.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "axios": "^1.13.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dockerode": "^4.0.9",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "googleapis": "^165.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.3",
