# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info
CORS_ORIGIN=*

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/codedojo

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_PAYLOAD=10485760

# Authentication (optional - for future JWT/session implementation)
# JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
# SESSION_SECRET=your_super_secret_session_key_at_least_32_characters_long

# AI Assistant Configuration
# AI_ENCRYPTION_KEY=32_byte_hex_key_for_encrypting_api_keys
# GEMINI_API_KEY=your_gemini_api_key
# GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta
# GEMINI_MODEL=gemini-1.5-flash-latest
# Required for production when storing user API keys

# OAuth Credentials
OAUTH_CLIENT_ID=your_client_id_here
OAUTH_CLIENT_SECRET=your_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Cloud Compute Keys (optional)
# Provide only if you plan to integrate with AWS or other cloud providers.
AWS_ACCESS_KEY_ID=your_aws_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_here
AWS_REGION=us-east-1
AWS_USE_LAMBDA=true

# GCP Configuration (optional)
GCP_PROJECT_ID=your_gcp_project_id
GCP_REGION=us-central1

# Azure Configuration (optional)
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_RESOURCE_GROUP=terminal-resources
AZURE_LOCATION=eastus

# AI Provider Keys (optional)
# Provide LLM provider keys when enabling AI-assisted features.
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Client Configuration
VITE_API_URL=http://localhost:3000/api
VITE_WS_URL=ws://localhost:3000
